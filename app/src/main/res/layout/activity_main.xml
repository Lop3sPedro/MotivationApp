<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <View
        android:id="@+id/view_menu"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image_all"
        android:src="@drawable/ic_all_incluse"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toTopOf="@id/image_happy"
        app:layout_constraintBottom_toBottomOf="@id/image_happy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_happy" />

    <ImageView
        android:id="@+id/image_happy"
        android:src="@drawable/ic_happy"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_menu"
        app:layout_constraintStart_toEndOf="@id/image_all"
        app:layout_constraintEnd_toStartOf="@id/image_sunny" />

    <ImageView
        android:id="@+id/image_sunny"
        android:src="@drawable/ic_sunny"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@id/image_happy"
        app:layout_constraintBottom_toBottomOf="@id/image_happy"
        app:layout_constraintStart_toEndOf="@id/image_happy"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="OlÃ¡, Kotlin!"
        android:textSize="18sp"
        android:fontFamily="@font/cabin"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@id/view_menu"
        app:layout_constraintBottom_toTopOf="@id/text_phrase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_phrase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:padding="16dp"
        android:gravity="center"
        android:fontFamily="@font/cabin"
        android:text="@string/app_name"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/text_user_name"
        app:layout_constraintBottom_toTopOf="@id/view_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="128dp"
        android:layout_height="3dp"
        android:backgroundTint="@color/dark_purple"
        android:background="@color/black"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/text_phrase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/dark_purple"
        android:fontFamily="@font/cabin"
        android:text="@string/new_phrase"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/view_divider"
        app:layout_constraintEnd_toEndOf="@id/view_divider" />
</androidx.constraintlayout.widget.ConstraintLayout>